<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_category_level_one_recyclerView"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@color/bgColor"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_category_level_two_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_category_level_one_recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/activity_category_level_one_name" />

    <TextView
        android:id="@+id/activity_category_level_one_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#2b2311"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_category_level_one_recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/include4" />

    <TextView
        android:id="@+id/textView74"
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/bgColor"
        app:layout_constraintBottom_toBottomOf="@+id/activity_category_level_one_name"
        app:layout_constraintEnd_toStartOf="@+id/activity_category_level_one_name"
        app:layout_constraintTop_toTopOf="@+id/activity_category_level_one_name" />

    <TextView
        android:id="@+id/textView75"
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/bgColor"
        app:layout_constraintBottom_toBottomOf="@+id/activity_category_level_one_name"
        app:layout_constraintStart_toEndOf="@+id/activity_category_level_one_name"
        app:layout_constraintTop_toTopOf="@+id/activity_category_level_one_name" />

</androidx.constraintlayout.widget.ConstraintLayout>