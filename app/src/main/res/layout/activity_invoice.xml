<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <include
        android:id="@+id/include13"
        layout="@layout/toolbar_layout" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_invoice_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bgColor"
        app:layout_constraintBottom_toTopOf="@+id/activity_invoice_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include13">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/activity_invoice_add"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_gradient_round_origin_button"
        android:text="新增发票"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>