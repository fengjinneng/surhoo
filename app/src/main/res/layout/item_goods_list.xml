<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/item_goods_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_goods_list_img"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/surhoo_logo" />

    <TextView
        android:id="@+id/item_goods_list_goodsname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/goodsName"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/item_goods_list_img"
        app:layout_constraintStart_toStartOf="@+id/item_goods_list_img"
        app:layout_constraintTop_toBottomOf="@+id/item_goods_list_img" />

    <TextView
        android:id="@+id/item_goods_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Y500"
        android:textColor="@color/themeColor"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_goods_list_goodsname"
        app:layout_constraintTop_toBottomOf="@+id/item_goods_list_goodsname" />

    <TextView
        android:id="@+id/item_goods_list_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_goods_list_price"
        app:layout_constraintEnd_toEndOf="@+id/item_goods_list_img" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="销量:"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_goods_list_price"
        app:layout_constraintEnd_toStartOf="@+id/item_goods_list_sales" />
</android.support.constraint.ConstraintLayout>