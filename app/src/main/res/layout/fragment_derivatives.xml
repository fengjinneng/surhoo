<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop.fragment.DerivativesFragment">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/fragment_derivatives_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tl_indicator_color="@color/themeColor"
        app:tl_indicator_width="15dp"
        app:tl_textSelectColor="@color/themeColor"
        app:tl_textUnselectColor="@color/saleColor"
        app:tl_textsize="15sp"
        app:tl_underline_gravity="BOTTOM"
        app:tl_underline_height="1dp">

    </com.flyco.tablayout.SlidingTabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_derivatives_viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@+id/fragment_derivatives_tab" />


</androidx.constraintlayout.widget.ConstraintLayout>